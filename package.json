{
  "name": "nasa-space-weather-forecaster",
  "version": "2.0.0",
  "description": "ðŸš€ Advanced NASA Space Weather Forecasting System with AI and 3D Visualization",
  "main": "dashboard_hub.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "python -m http.server 8000",
    "build": "node scripts/build.js",
    "build:prod": "NODE_ENV=production node scripts/build.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "lint": "eslint assets/*.js --fix",
    "lint:check": "eslint assets/*.js",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "optimize": "node scripts/optimize.js",
    "serve": "python backend/api_server.py",
    "docker:build": "docker build -t nasa-space-weather .",
    "docker:run": "docker run -p 8000:80 nasa-space-weather",
    "docker:compose": "docker-compose up -d",
    "deploy": "npm run build:prod && npm run optimize",
    "health-check": "curl -f http://localhost:8000/health || exit 1"
  },
  "keywords": [
    "nasa",
    "space-weather",
    "forecasting",
    "3d-visualization",
    "ai",
    "machine-learning",
    "real-time",
    "donki",
    "solar-flares",
    "cme"
  ],
  "author": "NASA Space Weather Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/space-weather-forecaster.git"
  },
  "bugs": {
    "url": "https://github.com/nasa/space-weather-forecaster/issues"
  },
  "homepage": "https://nasa-space-weather.netlify.app",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "terser": "^5.22.0",
    "html-minifier-terser": "^7.2.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0"
  },
  "dependencies": {
    "three": "^0.157.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "assets/*.js",
      "!assets/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "THREE": "readonly",
      "window": "readonly",
      "document": "readonly",
      "console": "readonly",
      "setTimeout": "readonly",
      "setInterval": "readonly",
      "clearTimeout": "readonly",
      "clearInterval": "readonly",
      "requestAnimationFrame": "readonly",
      "performance": "readonly",
      "navigator": "readonly",
      "localStorage": "readonly",
      "URLSearchParams": "readonly",
      "fetch": "readonly"
    }
  }
}